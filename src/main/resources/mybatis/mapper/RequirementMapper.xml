<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.admin.mapper.RequirementMapper">
    <resultMap id="requireResultMap" type="com.app.admin.model.User.User">
        <id property="id" column="id" />
        <result property="orderId" column="order_id"/>
        <result property="goodName" column="good_name"/>
        <result property="count" column="count"/>
        <result property="describe" column="describe"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <select id="getAll" resultMap="userResultMap">
        select * from requirement where is_delete = 1
    </select>
    <insert id="insert" parameterType="com.app.admin.model.Requirement.Requirement">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO requirement
        (`good_name`,`count`,`describe`,`order_id`)
        VALUES
        (#{goodName},#{count},#{describe},#{orderId})
    </insert>

    <select id="getByName" parameterType="java.lang.String" resultMap="requireResultMap">
          select * from user where is_delete = 1 and good_name = #{goodName}
    </select>

    <update id="updateByPrimaryKey" parameterType="com.app.admin.model.Requirement.Requirement">
        UPDATE TABLE `user`
        <set>
            <if test="goodName != null">
                good_name = #{goodName,jdbcType=VARCHAR},
            </if>
            <if test="count != null">
                count = #{count,jdbcType=INTEGER},
            </if>
            <if test="describe != null">
                describe = #{describe,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>